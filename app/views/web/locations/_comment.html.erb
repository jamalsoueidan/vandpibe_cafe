<li id="comment-<%=comment.id%>" class="comment-container">
	<div class="comment-text"><%=simple_format(comment.body)%></div>
	<div class="comment-date">Skrevet den <%=l comment.created_at%></i>
	<% if is_owner?(comment) %>
		<div class="options"><%= link_to "Fjern", location_path(@location, :comment_id => comment.id), :method => :delete, :confirm => 'Er du sikker du vil slette din anmeldelse?', :remote => true %></div>
	<% end %>
</li>