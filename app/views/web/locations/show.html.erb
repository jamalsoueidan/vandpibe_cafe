<%= render :partial => 'breadcrumbs'%>

<div class="row">        
	<div class="eight columns">
		<div class="panel whitepage" style="margin-bottom:15px;">
			<h1><%=@location.name.big%></h1>
			<p class="subheader"><%= simple_format(@location.description)%></p>
			
			<ul>
				<%= render(:partial => 'reference', :collection => @location.references, :as => :reference)%>
			</ul>
			
			<ul class="block-grid six-up" data-clearing>
				<%= render(:partial => 'upload', :collection => @location.uploads, :as => :upload)%>
			</ul>
		</div>
		
		<ul class="tabs">
		  <li class="active"><a href="#simple1">Brugeranmeldelser (<%=@location.comments.length%>)</a></li>
		</ul>

		<ul id="location_comments" class="no-margin-bottom">
			<%=render :partial => 'comment', :collection => @location.comments.includes(:user), :spacer_template => 'spacer_template'%>
		</ul>
		
		<div class="panel graypage">
			<% if not logged_in? %>
				<strong>Du bedes <a href="/login">logge ind</a> hvis du vil anmelde den her cafe</strong>
			<% else %>
				<%= render 'comment_form' %>
			<% end %>
		</div>

	</div>
	<div class="four columns">
		<div class="panel" id="map" style="height:250px;">
			<%= javascript_tag do %>
				$(function() {
					init_map(<%=@location.city.id%>, <%=@location.id%>)
				});
			<% end %>
	    </div>
					
		<div class="panel">
			<h3>Adresse:</h3>
			<p><%=@location.name.big%><br />
			<%=@location.address%><br />
			<%=@location.post%></p>
			<a class="button" href="http://maps.google.com?q=<%=@location.address%>,<%=@location.post%>" target="_blank">Vis p√• kort</a>
		</div>
		
		<div class="panel callout">
			<%= render :partial => 'site_rating', :locals => {:location => @location }%>
		</div>
		
		<div class="panel sixteen-line-height">
			<h3>Vandpibe Tobak:</h3>
			<%= render :partial => 'tobacco', :collection => @location.tobaccos, :as => :tobacco %>
		</div>
		
		<br />
		
		<div class="addthis_toolbox addthis_default_style addthis_32x32_style">
			<a class="addthis_button_preferred_1"></a>
			<a class="addthis_button_preferred_2"></a>
			<a class="addthis_button_preferred_3"></a>
			<a class="addthis_button_preferred_4"></a>
			<a class="addthis_button_compact"></a>
			<a class="addthis_counter addthis_bubble_style"></a>
		</div>
		
	</div>
</div>