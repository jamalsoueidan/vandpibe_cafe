<li id="location_<%=location.name%>">
	<% if location.uploads.empty? %>
		<%= link_to raw('<img src="/assets/thumb.gif" style="width:300px;height:250px;">'), city_location_path(@city.name, location.name.parameterize) %>
	<% else %>
	<%= link_to(image_tag(asset_host + location.uploads.first.avatar.path(:medium), :style => 'width:300px;height:250px;'), city_location_path(@city.name, location.name.parameterize)) %>
	<% end%>
	<div class="panel">
		<h5><%= link_to location.name.big, city_location_path(@city.name, location.name.parameterize), :alt => 'nice' %></h5>
		<h6 class="subheader"><%= @city.name.big%></h6>
	</div>
</li>
