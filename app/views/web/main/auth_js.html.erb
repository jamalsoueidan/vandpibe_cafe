<% if current_user.nil?%>
 	<%= link_to image_tag('facebook-login.png', :style => "max-width: none;width:200px;"), "/auth/facebook" %>
<% else %>
	<a href="<%=logout_path%>">
		<%= image_tag(current_user.avatar_url, :class => 'avatar_url') %> 
		<%= current_user.nickname %> <i class="foundicon-remove" style="position:static; font-size:10px"></i>
	</a>
<% end %>