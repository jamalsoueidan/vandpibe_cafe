<% if current_user.nil?%>
	<div class="signin">
 		<%= link_to image_tag('facebook-login.png', :style => "width:170px;height:30px;"), "/auth/facebook" %>
 	</div>
<% else %>
	<ul id="drop1" class="f-dropdown" data-dropdown-content><li><%= link_to "Log af", logout_path %></li></ul>
	<a href="#" data-dropdown="drop1" style="color:#000;"><%= image_tag(current_user.avatar_url, :class => 'avatar_url') %> <%= current_user.nickname %> <%= image_tag('down_arrow.png') %></a>
<% end %>