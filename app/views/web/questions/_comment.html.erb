<li id="comment-<%=comment.id%>" class="comment row">
	<div class="large-2 columns text-center">
		<% if comment.anonymous? %>
			Anonym bruger<br />
		<% else %>
		<%= link_to image_tag(comment.user.avatar_url), user_path(comment.user), :class => "remove-right-border left-border" %><br />
		<%= link_to comment.user.nickname, user_path(comment.user), :class => "remove-right-border left-border" %><br />
		<% end %>
		<%=comment.created_at.strftime('%d %b %y')%>
	</div>
	<div class="large-10 columns">
		<%=simple_format(comment.body)%>
		
		<% if is_owner?(comment) %>
			<div class="options"><%= link_to "Fjern", comment_path(comment), :method => :delete, :confirm => 'Er du sikker du vil slette din anmeldelse?', :remote => true, :id => "remove_comment" %></div>
		<% end %>
	</div>
</li>