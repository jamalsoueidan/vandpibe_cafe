<% content_for(:title, "Redigere spørgsmål") %>

<%= enable_back %>

<div class="row">    
	<div class="small-12 columns">
		<%= simple_form_for @question, :url => update_question_path(@question.id) do |f| %>
			<%= f.input :title, :label => "Ændre dit spørgsmål her:"  %>
			<%= f.input :category, :as => :select, :collection => Question::CATEGORIES, :include_blank => false %>
			<%= f.input :body, :label => "Informationer omkring dit spørgsmål:"%>
			<%= f.button :submit, :value => "Opdater spørgsmål", :class => "button" %>
		<% end %>
    </div>
</div>

<%= render :partial => 'navigator' %>